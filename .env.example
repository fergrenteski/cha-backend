# Configurações MongoDB para Vercel
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=YourApp

# Configurações de performance
NODE_ENV=production
FRONTEND_URLS=https://your-frontend.vercel.app,http://localhost:3000

# Configurações opcionais para debugging
MONGODB_TIMEOUT=20000
MONGODB_POOL_SIZE=5
MONGODB_RETRY_WRITES=true

# Para desenvolvimento local
# MONGO_URI=mongodb://localhost:27017/yourdb
